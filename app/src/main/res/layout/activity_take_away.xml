<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pangestutitan.pangestu_1202154211_modul2.TakeAway">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:text="Identitas Pemesanan:"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="25dp"
        android:id="@+id/textView" />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnPilih"
        android:layout_alignRight="@+id/btnPilih"
        android:layout_below="@+id/textView"
        android:layout_marginTop="16dp"
        android:ems="15"
        android:gravity="center_horizontal"
        android:hint="Name"
        android:textColorHint="@android:color/holo_blue_dark"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_below="@+id/name"
        android:ems="15"
        android:gravity="center_horizontal"
        android:hint="Phone"
        android:textColorHint="@android:color/holo_green_dark"
        android:inputType="textNoSuggestions" />

    <EditText
        android:id="@+id/alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/phone"
        android:layout_alignStart="@+id/phone"
        android:layout_centerVertical="true"
        android:ems="15"
        android:gravity="center_horizontal"
        android:hint="Alamat"
        android:textColorHint="@android:color/holo_red_dark"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/catatan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/alamat"
        android:layout_alignStart="@+id/alamat"
        android:layout_below="@+id/alamat"
        android:ems="15"
        android:gravity="center_horizontal"
        android:hint="Catatan"
        android:textColorHint="@android:color/holo_purple"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnPilih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/catatan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:ems="20"
        android:text="PILIH PESANAN" />
</RelativeLayout>
